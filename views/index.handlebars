<div class='container'>
    <div class='row'>
        <div class='col s8 push-s3'>
            <h1>Eat-Da-Burger</h1>
        </div>
    </div>
    <br />
    <div class='row'>
        <div class='col s8 push-s3'>
            <img src='/assets/img/burger.png'>
        </div>
    </div>

    <div class='row'>
        <div class='col s4'>
            <ol>
                <h4>Burgers to Devour</h4>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    <!--  {{this.id}} -->
                    <p>
                        <h5> {{this.burger_name}} </h5>
                        <a class="waves-effect waves-light btn eat" data-id="{{this.id}}">Devour It!!</a>
                    </p>
                </li>

                {{/unless}} {{/each}}
            </ol>
        </div>

        <div class='col s3 push-s5'>
            <ol>
                <h4>Burgers Devoured</h4>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    <h5>{{this.burger_name}}</h5>
                </li>
                {{/if}}{{/each}}
            </ol>
        </div>
    </div>
    <div class= 'container'>
        <div class='col s6 push 3'>
      <form action="/api/burgers" method='POST'>
